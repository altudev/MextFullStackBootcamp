@page "/counter"
@using MextFullStack.WasmClient.Services
@inject IToasterService ToastService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<img src="https://www.icegif.com/wp-content/uploads/2023/07/icegif-1262.gif" class="img-fluid text-center" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override void OnInitialized()
    {
        ToastService.ShowSuccess("Counter Page Loaded");

        base.OnInitialized();
    }

}
