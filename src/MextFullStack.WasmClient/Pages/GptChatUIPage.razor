@page "/gptchatui"

<div class="flex h-screen items-center justify-center bg-gray-100">
    <div class="card h-5/6 w-11/12 shadow-lg md:w-1/2 lg:w-1/3">
        <div class="card-body flex h-full flex-col">
            <div class="flex-grow space-y-4 overflow-y-auto">
                

               

                <!-- AI message -->
                <div class="chat chat-start">
                    <div class="chat-image avatar">
                        <div class="w-10 rounded-full">
                            <img src="ai-avatar.png" alt="AI Avatar">
                        </div>
                    </div>
                    <div class="chat-bubble chat-bubble-secondary">Sure, I'd be happy to help! Can you provide more details about your C# project?</div>
                    <div class="chat-footer opacity-50">9:35 AM</div>
                </div>

                <!-- More messages -->
            </div>

            <div class="mt-4 flex">
                <input type="text" placeholder="Type your message..." class="input input-bordered flex-grow rounded-r-none">
                <button class="btn btn-primary rounded-l-none">Send</button>
            </div>
        </div>
    </div>
</div>

